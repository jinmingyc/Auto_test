<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dao.BookMapper">
	<!-- 根据id查询book -->
	<select id="getBookById" resultType="com.domain.Book">
		SELECT id,title,typename,price,state from book where id = #{id}
	</select>
	<!-- 查询所有book -->
	<select id="getAllBooks" resultType="com.domain.Book">
		SELECT id,title,typename,price,state from book 
	</select>
</mapper>