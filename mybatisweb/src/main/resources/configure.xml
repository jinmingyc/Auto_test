<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<properties resource="jdbc.properties" />
	<settings>
		<setting name="logImpl" value="LOG4J" />
		<setting name="mapUnderscoreToCamelCase" value="true" />
	</settings>

	<typeAliases>
		<!-- 为包下面的类取别名，别名=类名 -->
		<package name="com.domain" />
		<!-- 指定单个类的别名 -->
		<!--typeAlias type="com.domain.Test" alias="Test"/ -->
	</typeAliases>

	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>

		<!-- oracle -->
		<environment id="test_oracle">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver_oracle}" />
				<property name="url" value="${url_oracle}" />
				<property name="username" value="${username_oracle}" />
				<property name="passwd" value="${password_oracle}" />
			</dataSource>
		</environment>
	</environments>

	<mappers>
		<!-- mapper resource="com/dao/TestMapper.xml"/ -->
		<!-- mapper class="com.dao.ITStudent"/ -->
		<mapper resource="com/dao/bookMapper.xml" />

		<mapper resource="com/dao2/BookMapper.xml" />
	</mappers>

</configuration>
